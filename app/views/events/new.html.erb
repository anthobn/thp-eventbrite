<main>
  <div class="container mt-5">
      <h1 class="text-center font-weight-bold text-danger">Création d'un évènement</h1>
      <hr>
      <h3 class="text-center font-italic">Cette page vous permet de créer une évènement</h3>
  </div>

  <% if @event && @event.errors.any? %>
    <div class="alert alert-danger mt-3" role="alert">
      <p class="h5 font-italic font-weight-bold mb-3">Les erreurs suivantes se sont produites :</p>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <%end%>

  <div class="container mt-5">
    <%= form_for @event do |f| %>

      <div class="form-group text-center">
        <label>Date de début :</label>
        <%= f.datetime_select :start_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <label>Durée :</label>
        <%= f.text_field :duration, class: "form-control" %>
      </div>

      <div class="form-group">
        <label>Titre :</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <label>Description :</label>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <label>Prix :</label>
        <%= f.text_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <label>Localisation :</label>
        <%= f.text_field :location, class: "form-control" %>
      </div>

    <div class="text-right">
      <button type="submit" class="btn btn-primary">Créer l'évènement</button>
    </div>

    <% end %>
  </div>
</main>