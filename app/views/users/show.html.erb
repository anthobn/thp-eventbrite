<main>
  <div class="container mt-5">
    <h1 class="text-center font-weight-bold text-danger">Consultation Fiche Utilisateur</h1>
    <hr>
    <h3 class="text-center font-italic">Retrouvez sur cette page le détail de l'utilisateur n°<%= @user.id %></h3>
    
    <table class="table table-bordered mt-5 text-center">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Prénom</th>
        <th scope="col">Nom</th>
        <th scope="col">Adresse EMAIL</th>
        <th scope="col">Description</th>
        <th scope="col">Date de création</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"><%= @user.id %></th>
        <td><%= @user.first_name %></td>
        <td><%= @user.last_name %></td>
        <td><%= @user.email %></td>
        <td><%= @user.description %></td>
        <td><%= @user.created_at %></td>
      </tr>
    </tbody>
    </table>
  </div>

  <div class="container mt-5">
    <h1 class="text-center font-weight-bold text-danger">Evènements administrés</h1>
    <hr>
    <h3 class="text-center font-italic">Retrouvez ci-dessous des évènements que vous administrez</h3>

    <div class="container">
    <div class="row">

      <% i = 0 %>
      <% @events.each do |event| %>
        <% if i < 3 %>

          <div class="col-md-4 p-2">
            <h2><%= event.title %></h2>
            <p><%= event.description %></p>
            <p><a class="btn btn-secondary" href="#" role="button">Consulter l'évènement &raquo;</a></p>
          </div>

          <% i += 1 %>

        <%else%>

          <% i = 1%>

          </div>
          <div class="row">
            <div class="col-md-4 p-2">
              <h2><%= event.title %></h2>
              <p><%= event.description %></p>
              <p><a class="btn btn-secondary" href="#" role="button">Consulter l'évènement &raquo;</a></p>
            </div>

        <%end%>
      <%end%>

  </div>
</main>