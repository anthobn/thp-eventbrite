<div class="container">
  <h1 class="text-center font-weight-bold text-danger">Modification du mot de passe</h1>
  <hr>
  <h5 class="text-center font-italic">Cette page vous permet de modifier votre mot de passe</h5>
</div>

<div class="container d-flex justify-content-center mt-5">
  <%= render "devise/shared/links" %>
</div>

<div class="container mt-5">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field form-group">
      <%= f.label :password, "Nouveau mot de passe :" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, "Confirmez votre nouveau mot de passe :" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Modifier mon mot de passe", class: "btn btn-success" %>
    </div>
  <% end %>
</div>