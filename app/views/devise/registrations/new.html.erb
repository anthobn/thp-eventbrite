<div class="container">
  <h1 class="text-center font-weight-bold text-danger">Création d'un compte utilisateur</h1>
  <hr>
  <h5 class="text-center font-italic">Cette page vous permet de vous inscrire en tant que nouvel utilisateur</h5>
</div>

<div class="container d-flex justify-content-center mt-5">
  <p class="font-italic mr-3">Vous avez déjà un compte ?</p>
  <%= render "devise/shared/links" %>
</div>

<div class="container mt-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <%= f.label :first_name, "Votre prénom :" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :last_name, "Votre nom :" %><br />
      <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :email, "Votre adresse email :" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :description, "Une description de vous :" %><br />
      <%= f.text_area :description, autocomplete: "description", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, "Mot de passe :" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caractères minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, "Confirmation du mot de passe :" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions text-right">
      <%= f.submit "S'inscrire", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
