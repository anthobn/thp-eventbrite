<!DOCTYPE html>
<html>
  <head>
    <title>ThpEventbrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

  <body class="pt-0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">EventBrite</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Accueil</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark btn btn-success" href="<%= new_event_path %>">Nouvel Évènement</a>
          </li>
        </ul>
        <% if user_signed_in? %>
          <a href="<%= user_path(current_user.id) %>" class="btn btn-primary mr-1">Voir mon profil</a>
          <a href="<%= edit_user_registration_path %>" class="btn btn-warning mr-1">Modifier mes infos</a>
          <a href="<%= destroy_user_session_path %>" class="btn btn-danger" data-method="DELETE">Se déconnecter</a>
        <% else %>
          <a href="<%= new_user_registration_path %>" class="btn btn-primary mr-1">S'inscrire</a>
          <a href="<%= new_user_session_path %>" class="btn btn-success">Se connecter</a>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
